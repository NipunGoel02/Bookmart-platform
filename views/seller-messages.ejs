<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Seller-Buyer Chat</title>
  <style>
    /* Styling for the chat */
    .chat-container {
      width: 80%;
      margin: 0 auto;
      display: flex;
      flex-direction: column;
    }
    .message {
      padding: 10px;
      margin: 5px 0;
      border-radius: 5px;
      width: 80%;
      max-width: 400px;
    }
    .seller {
      background-color: #cce5ff;
      align-self: flex-start;
    }
    .buyer {
      background-color: #f8d7da;
      align-self: flex-end;
    }
    .chat-box {
      overflow-y: auto;
      max-height: 400px;
      border: 1px solid #ccc;
      padding: 10px;
    }
    textarea {
      width: 100%;
      padding: 10px;
      margin-top: 10px;
    }
    button {
      padding: 10px;
      margin-top: 10px;
    }
  </style>
</head>
<body>

<div class="chat-container">
  <div id="chatMessages" class="chat-box">
    <!-- Loop over the messages array and display each message in the chat format -->
    <% messages.forEach(function(message) { %>
      <div class="message <%= message.sender_id === sellerId ? 'seller' : 'buyer' %>">
        <%= message.message %>
      </div>
    <% }); %>
  </div>

  <textarea id="messageInput" placeholder="Type your message..."></textarea>
  <button onclick="sendMessage()">Send</button>
</div>

<!-- Include external JavaScript file for handling messages -->
<script src="/javascripts/chat.js"></script>

</body>
</html>
